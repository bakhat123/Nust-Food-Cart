    <!-- Shape with rounded corners and solid color -->
    <item>
        <shape>

            <solid android:color="#56585D"/>

        </shape>
    </item>

    <!-- Background image with offset and reduced opacity -->
    <item
        android:left="4dp"

        android:drawable="@drawable/background"
        android:alpha="180" />
</layer-list>
